<Window x:Class="ProgrammSolvesForBusiness.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgrammSolvesForBusiness"
        mc:Ignorable="d"
        Title="SolveApp" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="341*"/>
            <RowDefinition Height="78*"/>
        </Grid.RowDefinitions>
        <Button x:Name="edit" Content="Редактировать" HorizontalAlignment="Left" Width="150" Height="50" Margin="10,10,0,18" Grid.Row="1"
                FontFamily="Monotype Corsiva" Background="#C6D7FF" Click="editBtn"/>
        <Button x:Name="add" Content="Добавить" HorizontalAlignment="Right" Width="150" Height="50" Margin="0,10,10,18" Grid.Row="1"
                FontFamily="Monotype Corsiva" Background="#C6D7FF" Click="addBtn"/>
    </Grid>
</Window>
